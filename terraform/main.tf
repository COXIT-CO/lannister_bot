terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 3.27"
    }
  }

  required_version = ">= 1.0.4"
}

provider "aws" {
  profile    = "default"
  region     = var.terraform_region
}

resource "aws_instance" "app_server" {
  ami                    = "ami-0d203747b007677da"
  instance_type          = "t2.micro"
  key_name = var.ssh_key_name #create IAM user with permissions for EC2 and ECR
  vpc_security_group_ids = [aws_security_group.main.id]

  tags = {
    Name = "Academy-EC2"
    OS = "UBUNTU"
  }
}

output "my-public-ip"{
       value= aws_instance.app_server.public_ip
}

// refactor security group to project requirements
